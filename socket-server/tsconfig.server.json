{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "rootDir": ".",
    "module": "ESNext",
    "target": "ES2020",
    "outDir": "./dist",
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": [
    "./**/*.ts",
    "../types.ts",
    "../src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
